{{#if shortURL}}
<div class="container">
  <h4>Success! Please use this link:</h4>
  <a class="d-flex" href="{{originalURL}}" target="_blank">
    <h5 class="shortURL">http://{{origin}}/{{shortURL}}</h5>
  </a>
  <button class="copy btn btn-primary ms-3" onclick="copyURL()">👉 copy 👈</button>
  <a class="backBtn" href="/">Back 🏡</a>
</div>

{{else}}
<div class="container"></div>
  <form action="/" method="POST">
    <input type="url" name="originalURL" placeholder="Input URL here" required />
    <button class="btn btn-outline-primary" type="submit">Shorten URL</button>
  </form>
</div>
{{/if}}

<script>
  function copyURL() {
    let copyText = document.querySelector('.shortURL').textContent
    navigator.clipboard.writeText(copyText)
    alert('Copy completed')
  }
</script>